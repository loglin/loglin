{
  "private": true,
  "workspaces": [
    "packages/*",
    "playground"
  ],
  "scripts": {
    "benchmark": "ts-node-dev --project=benchmarks/tsconfig.json --respawn --transpile-only benchmarks/index.ts",
    "build": "node scripts/build.js",
    "dev": "rollup -wc",
    "play": "ts-node-dev --project=playground/tsconfig.json --respawn --transpile-only playground/index.ts",
    "test": "yarn build && jest --no-colors",
    "lint": "eslint --ext .ts packages/*/src/**",
    "format": "prettier --write --parser typescript \"packages/**/*.ts\"",
    "docs": "vitepress dev docs",
    "docs:build": "vitepress build docs"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint",
      "yarn format"
    ]
  },
  "devDependencies": {
    "@jalik/benchmark": "^1.1.4",
    "@microsoft/api-extractor": "^7.12.1",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@typescript-eslint/parser": "^4.14.2",
    "brotli": "^1.3.2",
    "conventional-changelog-cli": "^2.1.1",
    "esbuild": "^0.8.39",
    "eslint": "^7.19.0",
    "execa": "^5.0.0",
    "fs-extra": "^9.1.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "pino": "^6.11.0",
    "pino-pretty": "^4.5.0",
    "prettier": "^2.2.1",
    "rollup": "^2.53.0",
    "rollup-plugin-esbuild": "^2.6.1",
    "ts-jest": "^26.5.0",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3",
    "vitepress": "^0.11.5",
    "winston": "^3.3.3",
    "yorkie": "^2.0.0",
    "zlib": "^1.0.5"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "keywords": [
    "fast",
    "logger",
    "node",
    "simple",
    "typescript",
    "types"
  ]
}
